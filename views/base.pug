doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", crossorigin="anonymous")

        title #{pageHeader}


    body 
        nav(class="navbar navbar-expand-lg navbar-light bg-warning ml-auto")
            div(class="container")
                a(class="navbar-brand", href="/")
                    img(src="https://image.flaticon.com/icons/png/512/1170/1170576.png", width="32", height="32", class="d-inline-block align-text-bottom")

                ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                    li(class="nav-item")
                        a(class="nav-link active fw-bold", aria-current="page", href="/products") Products
                
                form(class="d-flex")
                    input(class="form-control me-2", type="search", placeholder="Search", aria-label="Search", action="/")
                    button(class="btn btn-outline-dark", type="submit") Search

        block content
            div(class="container")
    

        div(class="text-center p-5 bg-dark container-fluid mt-5", style="height: 26rem;")
            a(class="text-reset fw-bold", href="https://mdbootstrap.com/")

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous") 
