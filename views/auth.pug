extends base

block content
    div(class="container animate__animated animate__fadeIn")
        div(class="row m-5")
            if (loginType)
                div(class="col-12 d-flex justify-content-center")
                    div(class="card d-flex shadow-sm rounded-3" style="width: 18rem; height: 22.50rem;")
                        h5(class="card-title text-center m-2 text-secondary") Login
                        form(class="row g-3" method="post", action="/auth/login")
                            div(class="card-body col-12")
                                input(class="mb-2", type="email", class="form-control", id="inputEmail", placeholder="Email", name="email", required)
                                input(class="mb-4", type="password", class="form-control", id="inputPassword", placeholder="Password", name="password", required)

                                div(class="form-check")
                                    input(class="form-check-input", type="checkbox", id="flexCheckDefault", name="userSession")
                                    label(class="form-check-label mb-2 text-secondary" for="flexCheckDefault") Remember me
                                a(href="", class="link-primary mx-auto text-decoration-none") Forgot password? 
                                            
                            button(type="submit", class="btn btn-warning text-dark rounded-3 shadow") Sign-In
                            a(type="button", class="btn btn-dark text-warning rounded-3", href="/auth/register") Or Create Account
            else
                div(class="col-12 d-flex justify-content-center")
                    div(class="card d-flex shadow-sm rounded-3" style="width: 18rem; height: 26.50rem;")
                        h5(class="card-title text-center m-2 text-secondary") Register
                        form(class="row g-3", method="post", action="/auth/register")
                            div(class="card-body col-12")
                                div(class="row g-1")
                                    div(class="col-6 float-left")
                                        input(class="mb-2", type="text", class="form-control", id="inputFirstname", placeholder="Firstname", name="firstname", required)
                                    div(class="col-6")
                                        input(class="mb-2", type="text", class="form-control", id="inputLastname", placeholder="Lastname", name="lastname", required)
                                input(class="mb-2", type="text", class="form-control", id="inputUsername", placeholder="Username", name="username", required)
                                input(class="mb-2", type="email", class="form-control", id="inputEmail", placeholder="Email", name="email", required)
                                input(class="mb-2", type="password", class="form-control", id="inputPassword", placeholder="Password", name="password", required)
                                input(class="mb-2", type="password", class="form-control", id="inputPasswordAgain", placeholder="Password Again", name="passwordagain", required)

                            button(type="submit", class="btn btn-warning text-dark rounded-3 shadow") Create Account
                            a(type="button", class="btn btn-dark text-warning rounded-3", href="/auth/login") Or Sign-In
    
    if (errorMessage)
        div(class="container alert alert-danger text-center" role="alert")
            span(class="fas fa-exclamation-triangle m-2")
            i= errorMessage